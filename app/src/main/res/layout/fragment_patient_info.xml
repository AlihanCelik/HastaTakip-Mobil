<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
       <variable
            name="hasta"
            type="com.alihan.hastatakipuygulamas.data.model.Hasta" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.PatientInfo.PatientInfoFragment">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/geriButton"
                style="@style/GeriButtonViewStyle"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/baseline_arrow_back_ios_24">
            </ImageView>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hasta Bilgileri"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:padding="18dp"
                android:textSize="15dp"
                android:fontFamily="@font/spartanbold"
                android:layout_gravity="center"
                >

            </TextView>
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="37dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            app:layout_constraintTop_toBottomOf="@id/linearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{"Ad : " + hasta.ad}'
                    android:textStyle="bold"
                    android:textSize="16dp">
                </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text='@{"Soyad : " + hasta.soyad}'
                android:textStyle="bold"
                android:textSize="16dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{"Tc Kimlik No : " + hasta.tcKimlikNo}'
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:textSize="16dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text='@{"Doğum Tarihi : " + hasta.dogumTarihi}'
                android:textStyle="bold"
                android:textSize="16dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text='@{"Cinsiyet : " + hasta.cinsiyet}'
                android:textStyle="bold"
                android:textSize="16dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text='@{"Telefon : " + hasta.telefon}'
                android:textStyle="bold"
                android:textSize="16dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text='@{"Email : " + hasta.email}'
                android:textStyle="bold"
                android:textSize="16dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text='@{"Adres : " + hasta.adres}'
                android:textStyle="bold"
                android:textSize="16dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{"Acil Durum Kişi : " + hasta.acilDurumKisi}'
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:textSize="16dp">
            </TextView>




        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
