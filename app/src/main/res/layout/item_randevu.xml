<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="randevu"
            type="com.alihan.hastatakipuygulamas.data.model.Randevu" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            android:layout_margin="5dp"
            style="@style/CardViewColor"
            android:clickable="true"
            android:id="@+id/item_ly"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/appointment">

                            </ImageView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:layout_gravity="start"
                                android:paddingVertical="20dp"
                                android:layout_marginRight="10dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/item_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:textStyle="bold"
                                    android:text='@{"Doktor : "+randevu.doktor.ad + " " + randevu.doktor.soyad}'>

                                </TextView>
                                <TextView
                                    android:id="@+id/item_brans"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    android:text='@{"Branş : " +randevu.doktor.branş}'>

                                </TextView>

                                <TextView
                                    android:id="@+id/item_tarih"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    android:text='@{"Tarih Saat : " +randevu.randevuTarihi}'>

                                </TextView>
                                <TextView
                                    android:id="@+id/item_durum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    android:text='@{"Durum : " +randevu.durum}'>

                                </TextView>



                            </LinearLayout>







                            <Space
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <ImageView
                                android:id="@+id/category_delete"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center"
                                android:src="@drawable/right"
                                style="@style/GeriButtonViewStyle">

                            </ImageView>


                        </LinearLayout>

                    </LinearLayout>






                </FrameLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</layout>
